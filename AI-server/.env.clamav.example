# ClamAV 病毒扫描配置示例
# 复制此文件为 .env 并根据需要修改配置

# 本地 ClamAV 配置
CLAMAV_LOCAL_ENABLED=false
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310
# 病毒数据库路径（可选，默认使用系统路径）
CLAMAV_DB_PATH=

# 在线扫描服务配置
CLAMAV_ONLINE_ENABLED=false
# 支持的服务：virustotal, hybrid, custom
CLAMAV_SERVICE=virustotal
CLAMAV_API_KEY=your_api_key_here
CLAMAV_API_URL=https://api.virustotal.com/v3
# 文件大小限制（字节）
CLAMAV_MAX_FILE_SIZE=33554432

# 扫描配置
# 是否启用文件上传时自动扫描
UPLOAD_VIRUS_SCAN_ENABLED=true
# 是否启用压缩包扫描
SCAN_ARCHIVES=true
# 扫描超时时间（毫秒）
SCAN_TIMEOUT=30000

# 日志配置
# 病毒扫描日志级别：error, warn, info, debug
CLAMAV_LOG_LEVEL=info
# 是否记录扫描的详细日志
CLAMAV_LOG_DETAILS=true