# 生产环境配置
NODE_ENV=production

# 服务器配置
PORT=4000

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=123456789
DB_NAME=postgres_production

# JWT配置
JWT_SECRET=prod_jwt_secret_key_please_change_this_in_production
JWT_EXPIRES_IN=24h

# API速率限制配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# CORS配置 (生产环境应该指定具体域名)
CORS_ORIGIN=*

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=prod_session_secret_please_change_this_in_production

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# 性能配置
DB_POOL_MIN=2
DB_POOL_MAX=10

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true